<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.RegisterPage" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:gravity="center"
        android:text="Welcome to Mordechai family!"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ID_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="9"
        android:hint="Enter your id please"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:inputType="number" />

    <EditText
        android:id="@+id/fullname_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter full name"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:inputType="textPersonName"
         />

    <EditText
        android:id="@+id/email_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter your email please"
        android:textStyle="bold"
        android:textSize="20sp"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/phone_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter your phone number please"
        android:textStyle="bold"
        android:textSize="20sp"
        android:inputType="phone" />

    <EditText
        android:id="@+id/password_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter the password you want"
        android:textStyle="bold"
        android:textSize="20sp"
        android:inputType="textPassword" />
    <android.widget.Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register!"
        android:textStyle="bold"
        android:textSize="26sp"
        android:layout_margin="10dp"
        android:id="@+id/registerPage_registerButton"
        android:background="@drawable/button_design"/>
</LinearLayout>